<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grapecity.xuni.samples.gauge"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="AutomaticScalingActivity" android:label="@string/automatic_scaling"></activity>
        <activity android:name="BulletGraphActivity" android:label="@string/bullet_graph"></activity>
        <activity android:name="CustomAnimationActivity" android:label="@string/custom_animation"></activity>
        <activity android:name="DirectionActivity" android:label="@string/direction"></activity>
        <activity android:name="DisplayingValuesActivity" android:label="@string/displaying_values"></activity>
        <activity android:name="GettingStartedActivity" android:label="@string/getting_started"></activity>
        <activity android:name="UsingRangesActivity" android:label="@string/using_ranges"></activity>
    </application>

</manifest>
